{
    "listeners": {
        "*:80": {
            "pass": "routes"
        }

    },

    "routes": [
        {
            "match": {
                "uri": [
                    "*.php",
                    "*.php/*",
                    "/wp-admin/"
                ]
            },

            "action": {
                "pass": "applications/wordpress/direct"
            }
        },
        {
            "action": {
                "share": "/www/wordpress/$uri",
                "fallback": {
                    "pass": "applications/wordpress/index"
                }
            }
        }
    ],

    "applications": {
        "wordpress": {
            "type": "php",
            "targets": {
                "direct": {
                    "root": "/www/wordpress/"
                },

                "index": {
                    "root": "/www/wordpress/",
                    "script": "index.php"
                }
            }
        }
    }
}
